{
  "name": "The Clock",
  "version": "1.0",
  "description": "The clock which shows time and date quickly. It has background images correspond to the periods of a day.",
  "permissions": [
    "declarativeContent"
  ],
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "images/date-time-48.png",
      "128": "images/date-time-128.png"
    }
  },
  "icons": {
    "48": "images/date-time-48.png",
      "128": "images/date-time-128.png"
  }
}